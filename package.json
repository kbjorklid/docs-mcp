{
  "name": "local-dev-docs-reader-mcp",
  "version": "0.1.0",
  "description": "MCP Server for intelligently and token-consciously reading .md files on local filesystem.",
  "main": "dist/index.js",
  "bin": {
    "docs-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kbjorklid/docs-mcp.git"
  },
  "keywords": ["mcp", "model context protocol", "documentation mcp", "markdown", "documentation"],
  "author": "Kalle Bj√∂krklid <kalle.bjorklid@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/node": "^24.7.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5"
  }
}
